<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/slider_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/slider_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/swipe_to_open"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintTop_toTopOf="@id/slider_bg"
        app:layout_constraintEnd_toEndOf="@id/slider_bg"
        app:layout_constraintStart_toStartOf="@id/slider_bg"
        app:layout_constraintBottom_toBottomOf="@id/slider_bg"/>

    <SeekBar
        android:id="@+id/slider_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:thumbOffset="10dp"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/slider_thumb_door"
        app:layout_constraintTop_toTopOf="@id/slider_bg"
        app:layout_constraintEnd_toEndOf="@id/slider_bg"
        app:layout_constraintStart_toStartOf="@id/slider_bg"
        app:layout_constraintBottom_toBottomOf="@id/slider_bg"/>

</androidx.constraintlayout.widget.ConstraintLayout>